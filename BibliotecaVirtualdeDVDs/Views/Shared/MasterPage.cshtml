<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Biblioteca Virtual de DVD's - @ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <link href="~/Content/alertify/css/alertify.min.css" rel="stylesheet" />
    <link href="~/Content/alertify/css/themes/default.min.css" rel="stylesheet" />
    <script src="~/Content/alertify/js/alertify.min.js"></script>

    <style>
        body {
            padding-top: 60px;
        }

        div.flag {
            padding-top: 8px;
            margin-left: 600px;
        }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="collapse navbar-collapse">
                <ul id="bulk" class="nav navbar-nav">
                    <li id="menuhome" class="active">
                        @Html.ActionLink(@Resources.WebResources.id_menu_inicio, "Index", "Home")
                    </li>
                    <li id="menuConfiguracaoUsuario">
                        @Html.ActionLink(@Resources.WebResources.id_menu_configuracoes, "ConfiguracoesUsuario", "DVD" )
                    </li>
                    <li id="menuAdicionarDvd">
                        @Html.ActionLink(@Resources.WebResources.id_menu_add_dvd, "Adicionar", "DVD")
                    </li>
                    <li id="menuListarDvd">
                        @Html.ActionLink(@Resources.WebResources.id_menu_list_dvd, "ListarDvds", "DVD")
                    </li>
                    @{ 
                        if (Session["user"] != null)
                        { 
                            <li id="menuLogout">
                                @Html.ActionLink(@Resources.WebResources.id_logout, "Logout", "Login")
                            </li>
                        }
                    }
                </ul>
                <div class="flag">
                    <a href="/Home/SetIdioma?culture=pt-BR"><img src="~/Content/imagens/brasil-flag.png" /></a>
                    <a href="/Home/SetIdioma?culture=en-US"><img src="~/Content/imagens/eua-flag.png" /></a>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()
    </div>

    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-2.2.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")"></script>

    @RenderSection("script", required: false)
</body>
</html>

